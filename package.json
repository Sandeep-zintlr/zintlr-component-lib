{
  "name": "zintlr-component-lib",
  "version": "1.0.0",
  "description": "React component library by Zintlr",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "exports": {
    ".": {
      "import": "./dist/bundle.esm.js",
      "require": "./dist/bundle.cjs.js"
    },
    "./*": "./src/*.jsx"
  },
  "files": [
    "dist",
    "src/**/*.jsx",
    "src/**/*.js"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "prepare": "husky install",
    "postinstall": "npm run prepare",
    "prebuild": "npm install",
    "build": "npm run clean:dist && rollup -c",
    "build:next": "next build",
    "dev": "next dev",
    "start": "next start",
    "watch": "rollup -c -w",
    "link-local": "npm link",
    "publish-local": "npm run build && yalc publish",
    "watch-local": "npm run build && yalc publish && npm run watch",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "next": "^14.0.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.1",
    "axios": "^1.6.2",
    "next": "^14.0.0",
    "react-redux": "^9.2.0",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.26.8",
    "@babel/preset-react": "^7.26.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.13",
    "prettier": "^3.5.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "4.11.0",
    "rollup": "^4.34.6",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.0.24"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zintlr/zintlr-component-lib"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "zintlr"
  ],
  "author": "Zintlr Private Limited",
  "license": "ISC"
}
