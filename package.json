{
  "name": "zintlr-component-lib",
  "version": "1.0.0",
  "description": "React component library by Zintlr",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "exports": {
    ".": {
      "import": "./dist/bundle.esm.js",
      "require": "./dist/bundle.cjs.js"
    },
    "./*": "./src/*.jsx"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "prepare": "husky install || true",
    "postinstall": "npm run prepare",
    "prebuild": "npm install",
    "build": "npm run clean:dist && rollup -c && webpack",
    "build:webpack": "webpack --mode production",
    "watch": "rollup -c -w",
    "dev": "npm run build && npm run watch",
    "link-local": "npm link",
    "publish-local": "npm run build && yalc publish",
    "watch-local": "npm run build && yalc publish && npm run watch",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src/**/*.jsx",
    "src/**/*.js"
  ],
  "keywords": [
    "react",
    "components",
    "ui",
    "zintlr"
  ],
  "author": "Zintlr Private Limited",
  "license": "ISC",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "@reduxjs/toolkit": "^2.5.1",
    "axios": "^1.6.2",
    "react-redux": "^9.2.0",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.26.8",
    "@babel/preset-react": "^7.26.3",
    "@eslint/js": "^9.28.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^10.0.0",
    "css-loader": "^6.10.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "postcss": "^8.4.13",
    "prettier": "^3.5.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "4.11.0",
    "rollup": "^4.34.6",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.0.24",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
